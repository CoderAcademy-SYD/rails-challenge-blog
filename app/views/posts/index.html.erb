<h1>Posts</h1>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Commenters</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>
          <% post.comments.each_with_index do |comment, index| %>
            <% if (index + 1) < post.comments.size %>
              <%= comment.user.name %>,
            <% else %>
              <%= comment.user.name %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
